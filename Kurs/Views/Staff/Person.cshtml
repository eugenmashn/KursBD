@model Kurs.Models.Person
@{
    ViewData["Title"] = "Person";
}
@{
    List<SelectListItem> listItems = new List<SelectListItem>();
    foreach (var City in ViewBag.City)
    {
        listItems.Add(new SelectListItem
        {
            Text = City.Name,
            Value = City.CityId.ToString()
        }
        );
    }
}
<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
<!-- Compiled and minified CSS -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0-beta/css/materialize.min.css">

<!-- Compiled and minified JavaScript -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0-beta/js/materialize.min.js"></script>

@using (Html.BeginForm("Person", "Staff", FormMethod.Post))
{
    <div class="col">
        <label>Місто</label>
                @Html.DropDownList("CityId", listItems, "-- Select Status --", new
            {
               @id = "CityId",
               @class = "form-control"
            })


    </div>

    <div class="col ">
        <label> Посада на якій працює робітник </label>
        @Html.TextBoxFor(m => m.Position, new { @id = "WindSpeed", @class = "form-control" })
    </div>


    <div style="margin:20px 0px ">
        <button type="submit" class=" btn btn-primary btn-block">Filter</button>
    </div>
}


<table class="table table-dark">
    <thead>
    <th scope="col">Ім'я </th>
    <th scope="col">Прізвище </th>
    <th scope="col">Телефон</th>
    <th scope="col">Посада</th>
    </thead>
    <tbody>

        @foreach (var person in ViewBag.Data)
        {

            <tr>
                <th scope="row">@person.FirstName</th>
                <th scope="row">@person.LastName </th>
                <th scope="row">@person.Phone </th>
                <th scope="row">@person.Position </th>
            </tr>

        }
    </tbody>
</table>

<script>
    $(document).ready(function () {
        $('.datepicker').datepicker();
    })
</script>

  