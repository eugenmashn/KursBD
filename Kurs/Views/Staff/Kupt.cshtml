@model Kurs.Models.SortCapitan
@{
    ViewData["Title"] = "Kupt";
}
<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
<!-- Compiled and minified CSS -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0-beta/css/materialize.min.css">

<!-- Compiled and minified JavaScript -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0-beta/js/materialize.min.js"></script>

@using (Html.BeginForm("Kupt", "Staff", FormMethod.Post))
{
    <div class="col">
        <label>Кількість стажу</label>
        @Html.TextBoxFor(m => m.Expirions, new { @id = "Expirions", @class = "form-control", @type = "number" })

    </div>

    <div class="col ">

        <input name="ArravedDate" type="text" placeholder="Дата" class="datepicker" />
    </div>


    <div style="margin:20px 0px ">
        <button type="submit" class=" btn btn-primary btn-block">Filter</button>
    </div>
}

<table class="table table-dark">
    <thead>
    <th scope="col">Ім'я </th>
    <th scope="col">Прізвище </th>
    <th scope="col">Число прибуття</th>
    <th scope="col">Стаж</th>
    </thead>
    <tbody>

        @foreach (var capitan in ViewBag.ListCupt)
        {

            <tr>
                <th scope="row">@capitan.Name </th>
                <th scope="row">@capitan.LastName </th>
                <th scope="row">@capitan.Arraved.ToString("MMMM/dd/yyyy") </th>
                <th scope="row">@capitan.Experitions </th>
            </tr>

        }
    </tbody>
</table>

<script>
    $(document).ready(function () {
        $('.datepicker').datepicker();
    })
</script>