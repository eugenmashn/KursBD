@{
    List<SelectListItem> listItems = new List<SelectListItem>();
    foreach (var Ship in ViewBag.Ship)
    {
        listItems.Add(new SelectListItem
        {
            Text = Ship.Name,
            Value = Ship.ShipId.ToString()
        });
    }
}
@{
    List<SelectListItem> listItemsP = new List<SelectListItem>();
    foreach (var Port in ViewBag.Port)
    {
        listItemsP.Add(new SelectListItem
        {
            Text = Port.Name,
            Value = Port.PortId.ToString()
        });
    }
}
<style>
    .modalF {
        display: none; /* Hidden by default */
        position: fixed; /* Stay in place */
        z-index: 1; /* Sit on top */
        padding-top: 100px; /* Location of the box */
        left: 0;
        top: 0;
        width: 100%; /* Full width */
        height: 100%; /* Full height */
        overflow: auto; /* Enable scroll if needed */
        background-color: rgb(0,0,0); /* Fallback color */
        background-color: rgba(0,0,0,0.4); /* Black w/ opacity */
    }

    /* Modal Content */
    .modal-contentF {
        background-color: #fefefe;
        margin: auto;
        padding: 20px;
        border: 1px solid #888;
        width: 60%;
    }

    /* The Close Button */
    .close {
        color: #aaaaaa;
        float: right;
        font-size: 28px;
        font-weight: bold;
    }

        .close:hover,
        .close:focus {
            color: #000;
            text-decoration: none;
            cursor: pointer;
        }
</style>
<table class="table table-dark">
    <thead>
    <th scope="col">Назва порту>
    <th scope="col">Дата прибуття </th>
    <th scope="col">Дата від'їзду</th>
    <th scope="col">Номер причалу</th>
    <th scope="col">Ціль</th>
    <th scope="col">Назва кораблю</th>
    </thead>
    <tbody>

        @foreach (var visit in ViewBag.Visits)
        {

            <tr>
                <th scope="col">@visit.Port.Name  </th>
                <th scope="col">@visit.DateArrival</th>
                <th scope="col">@visit.DateDeparture </th>
                <th scope="col">@visit.NumberPrich </th>
                <th scope="col">@visit.Purpose </th>
                <th scope="col">@visit.Ship.Name </th>
                <th scope="row"><a><input type="button" onclick="Open(this)" id="@visit.VisitsId" value="Змінити" /> </a></th>

            </tr>

        }
    </tbody>
</table>

<input type="button" onclick="Open()" value="Добавити відвідування" id="myBtnF" />
<div id="myModal" class="modalF ">
