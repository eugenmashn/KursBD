                <div class="col ">
                    <label> Назва порта </label>
                    @Html.DropDownListFor(m => m.PortId, listItemsP, "-- Select Status --", new
               {
                        @id = "PortId",
                        @class = "form-control"
               })
                </div>
                <div class="col ">
                    <label> Назва корабля </label>
